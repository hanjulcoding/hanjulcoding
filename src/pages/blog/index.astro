---
import "@/style/page.scss";
import dayjs from 'dayjs';
import BaseLayout from "@/layouts/BaseLayout.astro";
import { contentfulClient } from "@/lib/contentful";
import type { BlogPost } from "@/lib/contentful";
import type { Entry } from "contentful";

const entries = await contentfulClient.getEntries<BlogPost>({
  content_type: "pageBlogPost",
});

const posts = entries.items.reverse().map((item: Entry<BlogPost, undefined, string>) => {
  const { title, publishedDate, description, slug } = item.fields;
  return {
    title,
    slug,
    description,
    publishedDate: dayjs(publishedDate).format('YYYY-MM-DD'),
  };
});
---

<BaseLayout title={"한줄코딩 - Blog"}>
  <h1 class="text-2xl mb-8">블로그</h1>
  <ul>
    {
      posts.map((post) => (
        <li>
          <time>{post.publishedDate}</time>
          <a class="text-slate-600 dark:text-slate-200" href={`/blog/${post.slug}/`}>
            <div class="text-base">{post.title}</div>
            <div class="text-xs">{post.description}</div>
          </a>
        </li>
      ))
    }
  </ul>
</BaseLayout>
